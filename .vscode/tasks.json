{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/*/*.c",
                // "-o",
                // "${fileDirname}/${fileBasenameNoExtension}",
                // "-std=c89",
                "-std=c99",
                // "-pedantic",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Build Client Main",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Client/main.c",
                "${workspaceFolder}/Client/*/*.c",
                "-std=c99",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Client"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "Build Server Main",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/Server/main.c",
                "${workspaceFolder}/Server/*/*.c",
                "-std=c99",
                "-Wall"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Server"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}
